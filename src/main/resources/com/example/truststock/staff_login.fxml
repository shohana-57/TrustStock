<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.truststock.staffController"
            prefWidth="520" prefHeight="360" style="-fx-background-color:#f7f9fc;">
    <children>
        <VBox alignment="CENTER" spacing="12" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="50">
            <Label text="TrustStock" style="-fx-font-size:28px; -fx-font-weight:bold;"/>
            <Label text="Staff Login" style="-fx-font-size:14px; -fx-text-fill:#555;"/>

            <GridPane hgap="8" vgap="8">
                <padding>
                    <Insets top="15" right="0" bottom="0" left="0"/>
                </padding>
                <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="240"/>
                <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            </GridPane>

            <Button text="Login" onAction="#handleLogin" style="-fx-background-color:#2d89ef; -fx-text-fill:white; -fx-padding:8 30;"/>
            <Label fx:id="lblMessage" textFill="red"/>
            <HBox spacing="10">
                <Button text="Customer Access" onAction="#openCustomerView" />
                <Button text="Exit" onAction="#exitApp" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
