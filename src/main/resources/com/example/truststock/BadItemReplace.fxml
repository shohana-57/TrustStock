<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.truststock.workcontrol.ReplacementController">


<top>
    <Label style="-fx-font-size:22; -fx-font-weight:bold;" text="Replace Bad Products" BorderPane.alignment="CENTER">
        <BorderPane.margin>
            <Insets bottom="15" top="15" />
        </BorderPane.margin>
    </Label>
</top>


<center>
    <TableView fx:id="tableProducts" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" prefWidth="80" text="ID" />
            <TableColumn fx:id="colName" prefWidth="200" text="Product Name" />
            <TableColumn fx:id="colStock" prefWidth="120" text="Stock" />
            <TableColumn fx:id="colQuality" prefWidth="150" text="Quality Status" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
    </TableView>
</center>


<bottom>
    <HBox alignment="CENTER" spacing="15">
        <padding>
            <Insets bottom="15" top="15" />
        </padding>
         <Button fx:id="goOut" mnemonicParsing="false" onAction="#goExit" prefHeight="26.0" prefWidth="79.0" style="-fx-background-color: #fa352a;" text="Exit" />
         <Button fx:id="btnPrev" mnemonicParsing="false" onAction="#gePrev" prefHeight="26.0" prefWidth="124.0" style="-fx-background-color: skyblue;" text="Go to Dashboard">
            <HBox.margin>
               <Insets left="10.0" right="70.0" />
            </HBox.margin>
         </Button>

        <Label text="Replace Quantity:" />
        <TextField fx:id="txtQuantity" prefWidth="120" />

        <Button fx:id="btnReplace" onAction="#replaceProduct" style="-fx-background-color:#2e7d32; -fx-text-fill:white;" text="Replace_Mark GOOD" />
    </HBox>
</bottom>

</BorderPane>
