<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.truststock.workcontrol.CustomerComment">

    <top>
        <Label text="Customer Comments" style="-fx-font-size:18px; -fx-padding:10;"/>
    </top>

    <center>
        <TableView fx:id="tableComments" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                <TableColumn fx:id="colProduct" text="Product" prefWidth="150"/>
                <TableColumn fx:id="colComment" text="Comment" prefWidth="300"/>
                <TableColumn fx:id="colDate" text="Date" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding:10;">
            <Button fx:id="goQP" text="Go to Quality Page" onAction="#QualityPage"/>
            <Button text="Delete Selected Comment" onAction="#deleteComment"/>
        </HBox>
    </bottom>
</BorderPane>