<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.truststock.workcontrol.QualityController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color:#f5f5f5;">

    <!-- Top Label -->
    <top>
        <Label text="Product Quality Dashboard"
               style="-fx-font-size:24px; -fx-font-weight:bold; -fx-padding:15;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Center Table -->
    <center>
        <VBox spacing="10" >
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <TableView fx:id="tableProducts" prefHeight="450">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Product Name" prefWidth="250"/>
                    <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                    <TableColumn fx:id="colQuality" text="Quality Status" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Controls for updating quality -->
            <HBox spacing="15" alignment="CENTER_LEFT" >
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
                <Label text="Set Quality:" style="-fx-font-weight:bold;"/>
                <ComboBox fx:id="cbQuality" prefWidth="120"/>
                <Button text="Update Quality" onAction="#updateQuality"
                        style="-fx-background-color:#4CAF50; -fx-text-fill:white;"/>
                <Button   fx:id="btnGO" text="Go to Comment Page" onAction="#goCommentPage"
                        style="-fx-background-color:#2196F3; -fx-text-fill:white;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
